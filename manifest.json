{
	"manifest_version": 2,
	"name": "Language Flashcard Master",
	"version": "1.0",
	"description": "Создание карточек для изучения языков",
	"applications": {
		"gecko": {
			"id": "flashcards@example.com",
			"strict_min_version": "57.0"
		}
	},
	"permissions": [
		"menus",
		"storage",
		"activeTab",
		"<all_urls>",
		"https://translate.googleapis.com/*"
	],
	"browser_action": {
		"default_title": "Flashcards",
		"default_popup": "popup.html",
		"default_icon": {
			"32": "icons/icon32.png"
		}
	},
	"background": {
		"scripts": [
			"translator.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			]
		}
	]
}